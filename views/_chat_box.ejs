<!-- CHANGE :: Creat the code for chat box -->
<% if (locals.user){ %>
	<div id="user-chat-box">
		<div id='header'>
			<span id='online-dot'>
				<i class="fas fa-circle"></i>
			</span>
			<span id='chatroom'>
				ChatRoom
			</span>
			<span id='cross'  onclick="show_hide()">
				<i class="fas fa-times"></i>
			</span>
		</div>
		<ul id="chat-messages-list">
			<li class="other-message">
				
			</li>
			<li class="self-message">
				
				
			</li>

		</ul>
		<div id="chat-message-input-container">
			<input id="chat-message-input" placeholder="Type message here">
			<button id="send-message">Send</button>
		</div>

	</div>
<% } %>
<script>
	function show_hide()
	{
		var x=document.getElementById("user-chat-box");
		if(x.style.display=="block")
			x.style.display="none";
		else
			x.style.display="block";
	}
</script>